.con-vl-checkbox
  position: relative;
  display: block;
  display: flex;
  align-items: center;
  margin-left: 5px;
  margin-right: 5px;
  &.vl-checkbox-small
    .vl-checkbox
      width: 15px
      height 15px
      .vl-icon
        font-size: .7rem
  &.vl-checkbox-large
    .vl-checkbox
      width: 24px
      height 24px
.vl-checkbox--input
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 200;
  cursor: pointer;
  background: rgb(85, 215, 117);
  &:disabled
    cursor: default;
    pointer-events: none;
    & + .vl-checkbox
      opacity $vl-disabled-opacity;
      cursor: default;
      pointer-events: none;
      .vl-checkbox--check
        cursor: default;
        pointer-events: none;
  &:active:checked
    & + .vl-checkbox
      .vl-checkbox--check
        transform: translate(3px)
      .vl-icon
        transform: translate(6px)
  &:checked
    & + .vl-checkbox
      transform: rotate(0deg)
      .vl-checkbox--check
        transform: translate(0);
      .vl-icon
        opacity: 1;
        transform: translate(0)
        color: rgb(255, 255, 255)
.vl-checkbox
  transition: all .2s ease;
  cursor: pointer;
  position: relative;
  display: block;
  width: 20px;
  height: 20px;
  border-radius: 2px;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: rotate(-90deg);
  overflow: hidden;
  box-sizing: border-box;
  margin-right: 5px;
.vl-checkbox--check
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0px;
  transform: translate(100%);
  transform-origin: right;
  transition: all .20s ease
  z-index: 10;
.vl-checkbox--icon
  backface-visibility: visible;
  transition: all .2s ease-out;
  z-index: 100;
  font-size: 1.125em;
  opacity: 0;
  transform: translate(30px);
  transform-origin: center;

for colorx, i in $vl-colors
  .vl-checkbox-{colorx}
    .vl-checkbox--check
      background: var(colorx, 1)
    .vl-checkbox
      border: 2px solid rgb(180, 180, 180)
    input
      &:checked
        & + .vl-checkbox
          border: 2px solid var(colorx, 1) !important
