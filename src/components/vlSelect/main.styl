
// transition

.fadeselect-enter-active
  transition: transform .2s, opacity .2s;

.fadeselect-leave-active
  transition: transform .150s, opacity .150s;

.fadeselect-enter, .fadeselect-leave-to /* .fade-leave-active below version 2.1.8 */
  opacity: 0;
  transform: translate(0,0px) scale(0.950)
  box-shadow: 0px 10px 0px -5px rgba(0, 0, 0, 0);

.input-select-con
  position relative

.con-select
  position: relative;
  width: 200px
  clear both
  &.activeOptions:not(.autocompletex)
    .input-select
      opacity: 0;
      transform: scale(1.1);
  &.activeOptions
    .vl-select--icon
      transform: translate(0,-50%) rotate(-180deg)

.vl-select--icon
  position: absolute;
  right: 5px;
  font-size: 1.0625em;
  top: 50%;
  pointer-events none;
  transform: translate(0,-50%);
  transition: all .2s ease;

.vl-select--input
  color: inherit
  width: 100%
  position: relative;
  padding: 7px;
  border-radius: 5px;
  border: $vl-border
  transition: all .2s ease;
  padding-right: 20px;
  cursor: pointer;
  overflow: hidden;
  text-overflow: ellipsis;
  &:hover
    border: border 1px solid rgba(0,0,0,.4)
  &-con
    position: relative;
  &:disabled
    opacity $vl-disabled-opacity
    cursor: default
    pointer-events: none

.vl-select--label
  padding-left 5px;
  font-size: .85rem
  color $vl-label-color

.con-text-validation
  position: relative
  font-size: .65rem
  overflow: hidden
  transition: $vl-transition;
  .span-text-validation
    padding: 2px 4px;
    padding-bottom: 4px
    display: block

.scrollx
  ul
    padding-right: 4px;
.vl-select--options
  padding: 4px;
  padding-top: 6px;
  padding-left: 5px;
  padding-bottom: 6px;
  box-shadow: $vl-box-shadow;
  border-radius: 5px;
  position: absolute;
  z-index: 40000;
  background: $vl-background;
  ul
    max-height: 260px;
    overflow: auto;
    padding-left: 0px
    padding: 0px
    li
      margin: 0px;

.vl-select--item
  text-align: left;
  color: rgba(0,0,0,.8)
  padding: 7px;
  border 0px;
  position relative
  border-top: 1px solid $border-color
  border-bottom: 1px solid $border-color
  transition: all .3s ease
  margin: 0px !important
  cursor pointer
  &:hover
    background: rgb(245, 245, 245)
  &:focus
    background: rgb(245, 245, 245)
  &.con-icon.activex
    padding-left: 25px;
    .vl-select--item-icon
      opacity: 1;
      transform: translate(0,-50%);

.vl-select--item-icon
  position: absolute;
  font-size: 1.0em;
  left: 5px;
  transform: translate(-100%,-50%);
  opacity: 0;
  transition: all .2s ease;
  top: 50%;


for colorx, i in $vl-colors
  .vl-select-{colorx}
    .vl-select--item
      &.activex
        background: var(colorx, .1)
        color: var(colorx);
        font-weight: bold;
  .input-select-label-{colorx}--active
    color: var(colorx)
  .input-select-validate-{colorx}
    .input-select-con
      .input-select
        border-color: var(colorx)
      .vl-select--icon
        color var(colorx)


// item style //

.vl-select--item
  background: transparent
  padding: 5px;
  width: 100%;
  margin: 0px
  text-transform: capitalize;
  &.disabledx
    opacity: $vl-disabled-opacity;
    cursor: default
    pointer-events: none
  span.searchx
    background: rgba(0, 0, 0, 0.07);
    border-bottom: 1px solid rgba(0, 0, 0, 0.3);
    font-weight: bold;
    color: inherit;


// vl-select-group

.vl-select-group
  h4
    padding-left: 10px
    cursor default
    padding-bottom: 5px
  li
    border-left: 1px solid rgba(0,0,0,.1)
    margin-left: 15px !important
    list-style none

