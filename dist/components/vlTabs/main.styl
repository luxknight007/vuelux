.con-vl-tabs
  width 100%;
  overflow hidden
  position relative
  .con-slot-tabs
    position relative
    display: block
    overflow hidden
  .con-ul-tabs
    position relative

.vl-tabs--ul
  width 100%
  padding-left 0px;
  position relative
  box-shadow: 0px 0px 25px 0px rgba(0,0,0,.04)
  &.ul-tabs-center
    justify-content center
  &.ul-tabs-right
    justify-content flex-end
  &.ul-tabs-fixed
    justify-content space-between
    li
      width 100%

.line-vl-tabs
  width 100px
  height 2px
  display block
  position absolute
  transition all .2s ease
  transform: translateZ(0);
  will-change: left,right;

.vl-tabs--li
  display: block
  button
    box-sizing: border-box
    display: block
    position relative
    width 100%;
    background transparent
    margin 0px
    padding 10px
    border 0px
    cursor pointer
    transition all .2s ease
    &:hover:not(:disabled)
      color inherit
.activeChild
  button:not(:disabled)
    color inherit
  button
    padding-top 8px ;
    padding-bottom 12px ;

.vl-tabs-position-top
  .vl-tabs--ul
    display: flex
.vl-tabs-position-bottom
  display flex
  flex-direction: column
  .vl-tabs--ul
    border-top 1px solid rgba(0,0,0,.05)
    border-bottom: 0px !important;
  .con-ul-tabs
    order: 2;
  .line-vl-tabs
    top: 0px;

.vl-tabs-position-left
  display flex
  .line-vl-tabs
    left auto !important
    right 0px;
  .con-ul-tabs
    float left
    height: 100%;
    display: block
  .vl-tabs--ul
    display block
    width: auto
    border-bottom: 0px !important;
    border-right: 1px solid rgba(0,0,0,.05)
  .activeChild
    button
      padding-top 10px !important;
      padding-bottom 10px !important;
      padding-left: 12px !important;
      padding-right: 8px !important;


.vl-tabs-position-right
  display flex
  .con-slot-tabs
    width: 100%;
  .con-ul-tabs
    float left
    height: 100%;
    display: block
    order: 2;
  .vl-tabs--ul
    display block
    width: auto
    border-bottom: 0px !important;
    border-left: 1px solid rgba(0,0,0,.05)
  .activeChild
    button
      padding-top 10px !important;
      padding-bottom 10px !important;
      padding-left: 8px !important;
      padding-right: 12px !important;

for colorx, i in $vl-colors
  .vl-tabs-{colorx}
    button:disabled
      opacity .5
      cursor default !important
    button:not(:disabled)
      &:hover
        color: var(colorx, 1) !important
    .activeChild
      button
        color: var(colorx, 1) !important
        &:active
          background rgb(0,0,0)

    .line-vl-tabs
      background: linear-gradient(30deg, var(colorx, 1) 0%, var(colorx, .5) 100%) !important
      box-shadow 0px 0px 8px 0px var(colorx, .4) !important


