  transition: all .3s;
}
.fade-tab-enter, .fade-tab-leave-to /* .fade-tab-leave-active below version 2.1.8 */ {
  top: 0px;
  opacity: 0;
  position: absolute !important;
  transform: translate3d(-100%, 0, 0);
}
.fade-tab-leave-to /* .fade-tab-leave-active below version 2.1.8 */ {
  top: 0px;
  opacity: 0;
  position: absolute !important;
  transform: translate3d(100%, 0, 0);
